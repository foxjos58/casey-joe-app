<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:colorAccent">@color/secondary_grey</item>
        <item name="colorAccent">@color/secondary_grey</item>
        <item name="android:colorControlActivated">@color/color_control_activated</item>
        <item name="colorControlActivated">@color/color_control_activated</item>
        <item name="android:colorControlHighlight">@color/color_control_highlight</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BigButtonText">
        <item name="android:textSize">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
